{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "outDir": "lib",
    "lib": ["es2019"],
    "resolveJsonModule": true
  },
  "exclude": ["tests/**/*"]
}
